    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #1c1c1c;
            color: white;
        }
        header {
            padding: 20px;
            background-color: #ff5733;
        }
        input {
            padding: 10px;
            width: 60%;
        }
        button {
            padding: 10px;
            background-color: black;
            color: white;
            cursor: pointer;
        }
        #movie-container {
            margin-top: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .movie {
            margin: 10px;
            padding: 10px;
            background: #2c2c2c;
            border-radius: 10px;
            width: 220px;
        }
        img {
            width: 200px;
            height: 300px;
            border-radius: 10px;
        }
    </style>

