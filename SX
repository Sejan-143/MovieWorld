<body>

    <!-- Header à¦à¦¬à¦‚ Movie Search -->
    <header>
        <h1>Welcome to MovieWorld ðŸŽ¬</h1>
        <input type="text" id="search" placeholder="Search for movies...">
        <button onclick="searchMovie()">Search</button>
    </header>

    <!-- Movie Results -->
    <div id="movie-container"></div>

    <!-- JavaScript à¦•à§‹à¦¡ -->
    <script>
        // Movie Database (à¦à¦Ÿà¦¿ à¦à¦•à¦Ÿà¦¿ à¦‰à¦¦à¦¾à¦¹à¦°à¦£ à¦¹à¦¿à¦¸à§‡à¦¬à§‡ à¦°à¦¾à¦–à¦¾ à¦¹à§Ÿà§‡à¦›à§‡)
        const movieDatabase = [
            {
                title: "Inception",
                poster: "https://image.tmdb.org/t/p/w500/8h0foe6gdA6Xy25c6fyXvXmy9Tj.jpg",
                rating: 8.8,
                language: "English"
            },
            {
                title: "Parasite",
                poster: "https://image.tmdb.org/t/p/w500/6KhqR98wZ0GlkPqJ3mM4s5jePqa.jpg",
                rating: 8.6,
                language: "Korean"
            },
            {
                title: "The Dark Knight",
                poster: "https://image.tmdb.org/t/p/w500/1m2w15l8yzaWqO9S74pXxVvxJlO.jpg",
                rating: 9.0,
                language: "English"
            }
        ];

        // Movie Search Function
        function searchMovie() {
            const query = document.getElementById("search").value.toLowerCase();
            const container = document.getElementById("movie-container");
            container.innerHTML = "";

            const filteredMovies = movieDatabase.filter(movie => 
                movie.title.toLowerCase().includes(query)
            );

            if (filteredMovies.length > 0) {
                filteredMovies.forEach(movie => {
                    let movieElement = document.createElement("div");
                    movieElement.classList.add("movie");
                    movieElement.innerHTML = `
                        <img src="${movie.poster}" alt="${movie.title}">
                        <h3>${movie.title}</h3>
                        <p>Rating: ${movie.rating}</p>
                        <p>Language: ${movie.language}</p>
                    `;
                    container.appendChild(movieElement);
                });
            } else {
                container.innerHTML = "<p>No movies found.</p>";
            }
        }
    </script>

